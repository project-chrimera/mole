# .env example
# Discord
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD=123456789012345678

# MySQL
MYSQL_HOST=localhost
MYSQL_USER=db_user
MYSQL_PASSWORD=db_password
MYSQL_DATABASE=discord_bot

# LDAP
LDAP_SERVER=ldap://127.0.0.1
LDAP_USER=cn=admin,dc=exsample,dc=org
LDAP_PASSWORD=supersecret
LDAP_BASE_DN=dc=exsample,dc=org

# Postfix mapping
POSTFIX_MEMBER_GROUP=linux_users
POSTFIX_ROOT_GROUP=linux_admins
POSTFIX_MEMBER_ROLE_ID=123456789
POSTFIX_ROOT_ROLE_ID=123456789
# GID voor Postfix-groepen
POSTFIX_MEMBER_GID=10100
POSTFIX_ROOT_GID=10101

# Hook script (path to a PHP script that handles system-level changes)
ROLE_HOOK=/path/to/hook.php
